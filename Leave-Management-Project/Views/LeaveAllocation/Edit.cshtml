@model Leave_Management_Project.Models.EditLeaveAllocationViewModel

@{
    ViewData["Title"] = "Edit";
}

<h5>Editing @Model.LeaveType.Name Allocation for @Model.Employee.LastName, @Model.Employee.FirstName</h5>

<hr />
<div>
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="EmployeeId" />

        <div class="form-group">
            <label asp-for="NumberOfDays" class="control-label"></label>
            <input asp-for="NumberOfDays" class="form-control" />
            <span asp-validation-for="NumberOfDays" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary btn-block" />
        </div>
    </form>
</div>

<div>
    <a class="btn btn-outline-secondary btn-block" asp-action="Details" asp-route-id="@Model.EmployeeId">Back to Details</a>
</div>